<p id="notice"><%= notice %></p>

<h1>Room Images</h1>

<table>
  <thead>
    <tr>
      <th>Room</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_images.each do |room_image| %>
      <tr>
        <td><%= room_image.room_id %></td>
        <td><%= room_image.image_id %></td>
        <td><%= link_to 'Show', room_image %></td>
        <td><%= link_to 'Edit', edit_room_image_path(room_image) %></td>
        <td><%= link_to 'Destroy', room_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room Image', new_room_image_path %>

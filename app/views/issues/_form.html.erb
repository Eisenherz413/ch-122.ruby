<div class="row justify-content-center">
  <div class="col-7">
    <div class="row justify-content-center">
      <div class="col-6 row justify-content-center">

      <%= form_with(model: issue) do |form| %>
          <% if issue.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(issue.errors.count, "error") %> prohibited this issue from being saved:</h2>

              <ul>
                <% issue.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="field">
            <%= form.label :category_name %>
            <%= form.select :category_name,
                                    options_for_select(Category.all.names)%>
          </div>

          <div class="field">
            <%= form.label :category_description %>
            <%= form.text_field :category_description %>
          </div>

          <div class="field">
            <%= form.hidden_field :user_id, :value=> current_user.id %>
          </div>

          <div class="field">
            <%= form.label :text %>
            <%= form.text_field :text %>
          </div>

          <div class="field">
            <%= form.label :status %>
            <%= form.text_field :status %>
          </div>

          <div class="actions">
            <%= form.submit %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

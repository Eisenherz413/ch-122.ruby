<section>
  <div class="top-container" >
    <div class="row" style="margin-top: 30px;">
      <div class="col-10"></div>
      <div class="col-2"><%= link_to t('.add_service'), new_service_path, class: 'btn btn-primary', role: 'button' %></div>
    </div>
  </div>
  <div class="top-container">
  <% @services.each do |service| %>
      <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
          <div class="card" style="width: 23rem;">
          <div class="card-body text-center">
            <h5 class="card-title"><%= image_tag(service.icon_url, class: "col-2")%>&nbsp;<%= service.name %></h5>
            <p class="card-text"><%= service.description %></p>
            <div class="buttons_alignment">
              <div>
             <%= link_to t('.show_rooms'), service, class: 'btn btn-primary', role: 'button' %>
            <%= link_to t('.edit'), edit_service_path(service), class: 'btn btn-primary', role: 'button' %>
            <% if service.destroyable? %>
              <%= link_to t('.destroy'),service, method: :delete,  data: { confirm: 'Room services will be also deleted, continue?'}, role: 'button', class: 'btn btn-danger'%>
              <% else %>
                <div title="<%= t('.disabled_button_title')%>">
          <%= button_to t('.destroy'),service, method: :delete,  data: { confirm: 'Room services will be also deleted, continue?'}, disabled: true, class: 'btn btn-danger' %>
                </div>
              <% end  %>
              </div>

          </div>
          </div>
    </div>
        </div>
          <div class="col-md-4"></div>
      </div>
    <% end %>
      </div>
</section>



<header class="header">
  <div class="container">
    <div class="row">
      <div class="col-10"></div>
      <div class="col-2" style="margin-top: 30px;"><button type="button" class="btn btn-outline-primary" ><%= link_to 'Add service', new_service_path %></button></div>
  </div>
  </div>
</header>
<section>
  <div class="container">
  <% @services.each do |service| %>
      <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
          <div class="card" style="width: 20rem;">
          <div class="card-body">
            <h5 class="card-title"><%= image_tag(service.icon_url, class: "col-2")%>&nbsp;<%= service.name %></h5>
            <p class="card-text"><%= service.description %></p>
            <button type="button" class="btn btn-outline-secondary"><%= link_to 'Rooms', service %></button>
            <button type="button" class="btn btn-outline-warning"><%= link_to 'Edit', edit_service_path(service) %></button>
            <button type="button" class="btn btn-outline-danger"><%= link_to 'Destroy', service, method: :delete, data: { confirm: "Connected room services will be also deleted!" }%></button>

          </div>
    </div>
        </div>
          <div class="col-md-4"></div>
      </div>
    <% end %>
      </div>
</section>



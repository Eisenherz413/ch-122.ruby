<header class="header">
  <div class="top-container" >
    <div class="row" style="margin-top: 30px;">
      <div class="col-10"></div>
      <div class="col-2"><%= link_to 'Add service', new_service_path, class: 'btn btn-outline-primary', role: 'button' %></div>
  </div>
  </div>
</header>
<section>
  <p id="notice"><%= notice %></p>
  <div class="top-container">
  <% @services.each do |service| %>
      <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
          <div class="card" style="width: 18rem;">
          <div class="card-body text-center">
            <h5 class="card-title"><%= image_tag(service.icon_url, class: "col-2")%>&nbsp;<%= service.name %></h5>
            <p class="card-text"><%= service.description %></p>
            <div class="buttons_alignment">
             <%= link_to 'Rooms', service, class: 'btn btn-outline-secondary', role: 'button' %>
            <%= link_to 'Edit', edit_service_path(service), class: 'btn btn-outline-warning', role: 'button' %>
            <% if Service.can_destroy_service(service) %>
              <%= button_to 'Destroy',service, method: :delete,  data: { confirm: 'Room services will be also deleted, continue?'}, class: 'btn btn-outline-danger'%>
              <% else %>
          <%= button_to 'Destroy',service, method: :delete,  data: { confirm: 'Room services will be also deleted, continue?'}, disabled: true, class: "disabled_button_title" %>
              <%= javascript_pack_tag 'disabled_button_title', 'data-turbolinks-track': 'reload' %>
              <% end  %>
          </div>
          </div>
    </div>
        </div>
          <div class="col-md-4"></div>
      </div>
    <% end %>
      </div>
</section>



                <li class="nav-item">
                  <%= active_link_to t('global.menu.services'),services_path, class: "nav-link"%>
                </li>
                <li class="nav-item">
                  <%= active_link_to t('global.menu.rooms'), rooms_path, class: "nav-link"%>

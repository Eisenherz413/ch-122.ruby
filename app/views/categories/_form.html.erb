
<div class="bg-image p-5 text-center shadow-1-strong rounded mb-5 text-white" style="
background: linear-gradient(rgba(0, 0, 0, 0.327),rgba(0, 0, 0, 0.5)),
  url(<%= asset_path 'main_8.jpg' %>) no-repeat center 70%;
  background-size: cover; height: 250px;
">
  <div class="mask mask-custom">
      <h1 class="display-4 fst-italic"><%= t("categories.edit.editing_category_title") %></h1>
      <p class="lead my-3"><%= t("categories.edit.editing_category_description")%></p>
  </div>
</div>
  <div class="row justify-content-center">
  <div class="col-5">
    <% if notice.present? %>
      <!--      <p id="notice" class="alert alert-success"><%#= notice %></p>-->
    <% end %>
    <%= form_with(model: category) do |form| %>
      <% if category.errors.any? %>
        <div id="error_explanation" class="alert alert-danger" role="alert">
          <ul>
            <% category.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="row justify-content-center">
        <div class="col-12 row justify-content-center">
          <form class="form-group">
            <div class="form-group row col-md-12">
              <%= form.label :name, class: "col-sm-3 col-form-label" %>
              <div class="col-sm-12">
                <%= form.text_field :name, disabled: true, class: "form-control", type: "text" %>
              </div>
            </div>
            <div class="form-group row col-md-12">
              <%= form.label :description, class: "col-sm-3 col-form-label" %>
              <div class="col-sm-12">
                <%= form.text_area :description, class: "form-control", type: "text" %>
                <br>
              </div>
            </div>
            <div class="form-group row col-md-12">
              <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <%= form.submit t('global.forms.update_button'), class: "btn btn-success" %>
                <%= link_to t('global.forms.all_categories'), categories_path, class: "btn btn-primary" %>
              </div>
            </div>
          </form>
        </div>
      </div>
    <% end %>
  </div>
</div>